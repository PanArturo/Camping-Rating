<%- include("../partials/header") %>

<div class="container">
	 <h1 style="text-align: center">Update <%= campground.name %></h1>
		<form action="/campground/<%= campground._id %>?_method=PUT" method="POST">
		  	<div class="form-group">
				<label>Campground name</label>
				<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
		  	</div>
		  	<div class="form-group">
				<label>Image URL</label>
				<textarea class="form-control" name="campground[image]" rows="3"><%= campground.image %></textarea>
		  	</div>		  
			<div class="form-group">
				<label>Image Description</label>
				<textarea class="form-control" name="campground[description]" rows="4"><%= campground.description %></textarea>
		  	</div>	
		  	<button type="submit" class="btn btn-primary">Submit</button>			
			<a href="/campground/<%= campground.id %>" class="btn btn-secondary active mx-2" role="button" aria-pressed="true">Go Back</a>	
		</form>	
</div>

<%- include("../partials/footer") %>
