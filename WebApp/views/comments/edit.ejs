<%- include("../partials/header") %>

<div class="container">
	 <h1 style="text-align: center">Edit your comment</h1>
		<form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">	  
			<div class="form-group">
				<label>Text</label>
				<textarea class="form-control" name="comment[text]" rows="2" required><%= comment.text %></textarea>
		  	</div>	
		  	<button type="submit" class="btn btn-primary">Submit</button>			
			<a href="/campground/<%= campground_id %>" 
			   class="btn btn-secondary active mx-2" 
			   role="button" aria-pressed="true">
				Go Back
			</a>	
		</form>	
</div>
<%- include("../partials/footer") %>



